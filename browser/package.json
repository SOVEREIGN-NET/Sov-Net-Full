{
  "name": "@zhtp/web4-app",
  "version": "1.0.0",
  "description": "ZHTP Web4 Desktop App with ZK-DID, DAO Integration, and Real API Connectivity",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "test": "jest",
    "package": "electron-packager . zhtp-web4-app --platform=all --arch=x64 --out=dist/"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "axios": "^1.6.0",
    "crypto-js": "^4.2.0",
    "bech32": "^2.0.0",
    "blake3": "^2.1.7",
    "tweetnacl": "^1.0.3",
    "qrcode": "^1.5.3",
    "socket.io-client": "^4.7.0",
    "web3": "^4.0.0",
    "@noble/curves": "^1.2.0",
    "@noble/hashes": "^1.3.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0",
    "electron-packager": "^17.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0"
  },
  "keywords": [
    "web4",
    "zhtp",
    "zero-knowledge",
    "quantum-resistant",
    "decentralized",
    "app",
    "dao",
    "zkdid"
  ],
  "author": "ZHTP Core Team",
  "license": "MIT",
  "build": {
    "appId": "com.zhtp.web4app",
    "productName": "ZHTP Web4 App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
